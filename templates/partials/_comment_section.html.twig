<div id="comments" class="card shadow-sm p-3 mb-4 rounded-card-border">
	<h5 class="fw-bold">Commentaires</h5>

	<!-- Section mettre un commentaire si l'utilisateur est connect√© -->
	{% if app.user %}
		<div class="d-flex align-items-start my-3">
			<img src="{{app.user.image}}" alt="Avatar" class="rounded-circle" style="width: 54px; height: 54px; object-fit: cover;">

			<div class="ms-3 flex-grow-1">
				<form method="post" action="{{ path('comment_add', {'id': deal.id}) }}">
					<div class="mb-2">
						<textarea name="content" class="form-control" rows="3" placeholder="√âcrire un commentaire..." required></textarea>
					</div>
					<div class="d-flex justify-content-end">
						<button type="submit" class="btn btn-deal rounded-pill">
							<i class="bi bi-send mx-1"></i>
							Publier
						</button>
					</div>

				</form>
			</div>
		</div>
	{% else %}
		<p class="text-muted">Veuillez
			<a href="#" data-bs-toggle="modal" data-bs-target="#loginModal">vous connecter</a>
			pour ajouter un commentaire.</p>
	{% endif %}

	<!-- Section liste des commentaires du deal -->


	{% for comment in deal.comments|filter(comment => comment.parent is null) %}

		<div
			id="comment-{{ comment.id }}" class="d-flex align-items-start mt-2 border-top">

			<!-- Contenu du commentaire -->
			<div class="ms-3 w-100">
				<div
					name="Comment-header" class="d-flex justify-content-between align-items-start my-3 rounded">
					<!-- Avatar -->
					<img
					src="{{ comment.user.image }}" alt="Avatar" class="rounded-circle me-2" style="width: 54px; height: 54px; object-fit: cover;">

					<!-- User Info -->
					<div class="flex-grow-1">
						<strong>{{ comment.user.username }}</strong>
						<p class="text-muted mb-1" style="font-size: 0.85rem;">{{ comment.createdAt|ago }}</p>
					</div>

					<!-- Dropdown Menu -->
					<div class="dropdown">
						<button class="btn btn-light border-0 rounded-circle" type="button" id="dropdownMenuButton{{ comment.id }}" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="bi bi-three-dots"></i>
							<!-- Bootstrap Icons -->
						</button>
						<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton{{ comment.id }}">
							<li>
								<a class="dropdown-item" href="#" onclick="copyLink(event, '{{ comment.id }}')">
									<i class="bi bi-clipboard-check mx-2"></i>
									Copier le lien du commentaire
								</a>
							</li>

							{% if app.user == comment.user %}
								<!-- Afficher les options "Modifier" et "Supprimer" si l'utilisateur est l'auteur du commentaire -->
								<li>
									<a class="dropdown-item" href="#" onclick="enableEdit(event,'{{ comment.id }}')">
										<input type="hidden" id="csrf_token" value="{{ csrf_token('edit_comment') }}">
										<i class="bi bi-pencil mx-2"></i>
										Modifier
									</a>
								</li>
								<li>
									<form action="{{ path('comment_delete', { 'id': comment.id }) }}" method="POST" style="display: inline;">
										<button type="submit" class="dropdown-item text-danger" style="background: none; border: none;">
											<i class="bi bi-trash mx-2"></i>
											Supprimer
										</button>
									</form>
								</li>
							{% else %}
								<!-- Afficher l'option "Signaler" si l'utilisateur n'est pas l'auteur du commentaire -->
								<li>
									<a class="dropdown-item text-danger" href="#">
										<i class="bi bi-flag mx-2"></i>
										Signaler
									</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
				<p id="comment-content-{{ comment.id }}" class="comment-content mb-1">{{ comment.content }}</p>
				<!-- Section des actions (votes + r√©ponse) -->
				<div class="d-flex align-items-center mt-2 gap-3">
					<button class="btn btn-sm btn-outline-success vote-btn" data-id="{{ comment.id }}" data-type="upvote">
						<i class="bi bi-hand-thumbs-up"></i>
						<span class="positive-votes">{{ comment.positiveVotes }}</span>
					</button>

					<button class="btn btn-sm btn-outline-danger vote-btn" data-id="{{ comment.id }}" data-type="downvote">
						<i class="bi bi-hand-thumbs-down"></i>
						<span class="negative-votes">{{ comment.negativeVotes }}</span>
					</button>

					<button class="btn btn-sm btn-outline-secondary reply-btn" data-id="{{ comment.id }}">
						<i class="bi bi-reply-fill"></i>
						R√©pondre
					</button>
				</div>

				<!-- üîΩ Sous-commentaires (R√©ponses) -->
				<div
					class="ms-5 p-2">
					<!-- Formulaire de r√©ponse (toujours pr√©sent) -->
					<form method="post" action="{{ path('comment_add', {'id': deal.id}) }}">
						<div class="reply-form my-3 text-end" id="reply-form-{{ comment.id }}" style="display: none;">
							{% if app.user %}
								<textarea name="content" class="form-control mb-2" rows="2" placeholder="Votre r√©ponse..." required></textarea>
								<input type="hidden" name="parent_id" value="{{ comment.id }}">
								<button class="btn btn-deal rounded-pill btn-sm "> 
									<i class="bi bi-send mx-1"></i>
									Publier la r√©ponse
								</button>
							{% else %}
								<p class="text-muted">
									Veuillez
									<a href="#" data-bs-toggle="modal" data-bs-target="#loginModal">vous connecter</a>
									pour r√©pondre √† ce commentaire.
								</p>
							{% endif %}
						</div>
					</form>

					<!-- Liste des r√©ponses avec la bordure uniquement si des r√©ponses existent -->
					{% if comment.comments|length != 0 %}
						<div class="border-start ps-3">
							{% for reply in deal.comments|filter(reply => reply.parent == comment) %}
								<div id="comment-{{ reply.id }}" class="d-flex align-items-start mt-2">
									<div class="ms-2 w-100">
										<div name="Reply-header" class="d-flex justify-content-between align-items-start my-3 rounded">
										    <img src="{{ reply.user.image }}" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            <div class="flex-grow-1">
												<strong>{{ comment.user.username }}</strong>
												<p class="text-muted mb-1" style="font-size: 0.85rem;">{{ comment.createdAt|ago }}</p>
											</div>

											<!-- Dropdown Menu -->
											<div class="dropdown">
												<button class="btn btn-light border-0 rounded-circle" type="button" id="dropdownMenuButton{{ reply.id }}" data-bs-toggle="dropdown" aria-expanded="false">
													<i class="bi bi-three-dots"></i>
													<!-- Bootstrap Icons -->
												</button>
												<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton{{ reply.id }}">
													<li>
														<a class="dropdown-item" href="#" onclick="copyLink(event, '{{ reply.id }}')">
															<i class="bi bi-clipboard-check mx-2"></i>
															Copier le lien du commentaire
														</a>
													</li>

													{% if app.user == reply.user %}
														<!-- Afficher les options "Modifier" et "Supprimer" si l'utilisateur est l'auteur du commentaire -->
														<li>
															<a class="dropdown-item" href="#" onclick="enableEdit(event,'{{ reply.id }}')">
																<input type="hidden" id="csrf_token" value="{{ csrf_token('edit_comment') }}">
																<i class="bi bi-pencil mx-2"></i>
																Modifier
															</a>
														</li>
														<li>
															<form action="{{ path('comment_delete', { 'id': reply.id }) }}" method="POST" style="display: inline;">
																<button type="submit" class="dropdown-item text-danger" style="background: none; border: none;">
																	<i class="bi bi-trash mx-2"></i>
																	Supprimer
																</button>
															</form>
														</li>
													{% else %}
														<!-- Afficher l'option "Signaler" si l'utilisateur n'est pas l'auteur du commentaire -->
														<li>
															<a class="dropdown-item text-danger" href="#">
																<i class="bi bi-flag mx-2"></i>
																Signaler
															</a>
														</li>
													{% endif %}
												</ul>
											</div>

										</div>
										<p id="comment-content-{{ reply.id }}" class="mb-1">{{ reply.content }}</p>
									</div>
								</div>
							{% endfor %}
						</div>
					{% endif %}
				</div>

			</div>
		</div>
	{% else %}
		<p class="text-muted">Aucun commentaire pour le moment.</p>
	{% endfor %}


</div>
