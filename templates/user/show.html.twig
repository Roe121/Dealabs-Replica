{% extends 'base.html.twig' %}

{% block title %}
	{{ user.username }}
{% endblock %}

{% block body %}
	<div class="profile-container w-60 mx-auto">
		<!-- Header du profil -->
		<div class="profile-header my-3 bg-white rounded-card text-center p-4">
			<img src="{{ user.image }}" alt="Avatar" style="width: 100px; height: 100px; border-radius: 50%;">
			<h2>{{ user.username }}</h2>
			<p>Inscrit(e) depuis le {{ user.createdAt|date('d F Y') }}</p>
			<p>{{ user.deals|length }} deal(s) ‚Ä¢ {{ user.comments|length }} commentaire(s)</p>
		</div>

		<!-- Onglets de navigation -->
		<nav class="d-flex justify-content-center border-bottom pb-2 mb-3">
			<a  href="#" class="nav-link profile-nav-link active" data-target="activities">Activit√©</a>
			<a  href="#" class="nav-link profile-nav-link" data-target="deals">Deals</a>
			<a  href="#" class="nav-link profile-nav-link" data-target="discussions">Discussions</a>
			<a  href="#" class="nav-link profile-nav-link" data-target="statistics">Statistiques</a>
		</nav>

		<!-- Activit√© des commentaires -->
		<div id="activities" class="tab-content mb-4">
			{% for comment in user.comments %}
				<div class="rounded-card-border bg-white d-flex align-items-center p-3 my-2">
					<img src="{{ comment.deal.image }}" alt="Deal Image" class="img-fluid rounded border me-2" style="width: 60px; height: 60px; object-fit: cover; border-radius: 12px;">

					<div class="d-flex flex-column w-100">
						<div>
							{% if app.user == user %}
								<strong>Vous avez comment√© le deal :</strong>
							{% else %}
								<strong>{{ user.username }} a comment√© le deal :</strong>
							{% endif %}
							<a href="{{ path('deal_show', {id: comment.deal.id}) }}">{{ comment.deal.name }}</a>
						</div>
						<p class="text-muted small">
							<i class="bi bi-chat"></i> {{ comment.createdAt|date('d F Y') }}
						</p>
					</div>
				</div>
			{% else %}
				<p>Aucune activit√© r√©cente.</p>
			{% endfor %}
		</div>

		<!-- Deals publi√©s -->
		<div id="deals" class="tab-content d-none mb-4">
			{% for deal in user.deals %}
				{% include 'partials/deal/_deal_card.html.twig' %}
			{% else %}
				<p>Aucun deal publi√©.</p>
			{% endfor %}
		</div>

		<!-- Discussions cr√©es publi√©s -->
		<div id="discussions" class="tab-content d-none mb-4">
			<p>Syst√®me de discussions en cours de d√©veloppement.. üòä</p>
		</div>

		<!-- Statistiques -->
		<div id="statistics" class="tab-content d-none mb-4">
			<p>Affichage des Statistiques en cours de d√©veloppement.. üòä</p>
		</div>

	</div>

	<!-- Script JavaScript pour la navigation des onglets -->
	<script>
		document.querySelectorAll('.profile-nav-link').forEach(link => {
			link.addEventListener('click', function (e) {
				e.preventDefault();

				// Gestion des classes actives pour les onglets
				document.querySelectorAll('.profile-nav-link').forEach(nav => nav.classList.remove('active'));
				this.classList.add('active');

				// Affichage du contenu correspondant
				document.querySelectorAll('.tab-content').forEach(tab => tab.classList.add('d-none'));
				document.getElementById(this.dataset.target).classList.remove('d-none');
			});
		});
	</script>
{% endblock %}
